<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="240.5dp"
                android:background="@color/line_color">
    <LinearLayout
        android:id="@+id/ll_layout"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_margin="0.25dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <!-- 标签 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="171dp">

            <ImageView
                android:id="@+id/assort_picture"
                android:layout_width="match_parent"
                android:layout_height="171dp"
                android:layout_margin="5dp"/>

            <RelativeLayout
                android:id="@+id/upload_tag_rl"
                android:layout_width="match_parent"
                android:layout_height="171dp"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/assort_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            android:text="时髦前卫"
            android:textColor="@color/assistant_item_text"
            android:textSize="13sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:id="@+id/ll_user"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/img_avater"
                        android:layout_width="18dp"
                        android:layout_height="18dp"/>

                    <TextView
                        android:id="@+id/avater_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:singleLine="true"
                        android:text="阿尤"
                        android:textColor="@color/black"
                        android:textSize="9sp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical|right">
                    <ImageView
                        android:id="@+id/img_plus"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/topic_gray"/>
                    <ImageView
                        android:id="@+id/img_flavor"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/dianzan_gray"
                    />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
